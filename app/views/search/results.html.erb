<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1 class="title text-center"><%= t '.title' %></h1>

    <% if @offenses.empty? %>
      <%= render 'record_missing' %>
    <% elsif @offenses.any?(&:approved?) %>
      <%= render 'approved' %>
    <% elsif @offenses.any?(&:pending?) %>
      <%= render 'pending' %>
    <% elsif @offenses.any?(&:denied?) %>
      <%= render 'denied' %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>
