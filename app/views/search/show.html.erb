<h1><%= t ".title" %></h1>
<h2><%= t ".welcome_message" %></h2>

<p><%= t ".introduction" %></p>

<%= form_for @offense, url: confirm_path do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, autocomplete: 'new-password', class: 'form-control', placeholder: 'First Name', required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :middle_name, autocomplete: 'new-password', class: 'form-control', placeholder: 'Middle Name' %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, autocomplete: 'new-password', class: 'form-control', placeholder: 'Last Name', required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :date_of_birth, class: 'form-control', placeholder: 'Date of Birth', required: true %>
  </div>
  <%= f.submit 'Search', class:'btn btn-primary' %>
<% end %>

<hr />
<p><%= t ".upcoming_court_dates" %></p>
<hr />
<h2><%= t ".about_project" %></h2>
<button type="button" class="btn btn-primary about-us"><%= t ".about_button" %></button>
<p><%= t ".project_partners" %></p>
<br />
</p>
