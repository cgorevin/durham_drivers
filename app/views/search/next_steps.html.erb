<%# the final page: Thank you & what to expect next %>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h1 class="title text-center"><%= t '.title' %></h1>

    <% if @offenses.all?(&:approved?) %>
      <%= render 'search/approved_signup' %>
    <% else %>
      <%= render 'search/pending_signup' %>
    <% end %>

    <%# dear office address %>
    <h2><%= t '.dear_program' %></h2>
    <p><%= t '.address1' %></p>
    <p><%= t '.address2' %></p>
    <p><%= t('.address3').html_safe %></p>
    <p><%= t '.address4' %></p>

    <%# email and map buttons %>
    <%= mail_to 'dear@durhamnc.gov', t('.email'), class: 'btn btn-info' %>
    <%= link_to t('.map'), 'https://www.google.com/maps/place/510+S+Dillard+St,+Durham,+NC+27701/@35.9921841,-78.9035178,17z/data=!3m1!4b1!4m5!3m4!1s0x89ace46c181f41cf:0x43ebc317d722369a!8m2!3d35.9921841!4d-78.9013291', target: '_blank', rel: 'noopener', class: 'btn btn-info' %>
    <%#= link_to t('.print'), '#', class: 'btn btn-primary' %>


    <%# back button %>
    <div class="d-flex justify-content-around mt-5">
      <a class="btn btn-primary" href="<%= root_path(locale: params[:locale]) %>"><%= t '.back' %></a>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
