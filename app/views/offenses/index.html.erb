<h1>Search Offenses</h1>

<h2>Admin Panel page</h2>

<%= form_tag offenses_path, method: :get, enforce_utf8: false do %>
  <table>
    <thead>
      <th><label for="f">First name</label></th>
      <th><label for="m">Middle name</label></th>
      <th><label for="l">Last name</label></th>
      <th><label for="d">Date of birth</label></th>
      <th><label for="g">Group ID</label></th>
    </thead>
    <tbody>
      <tr>
        <td><%= text_field_tag :f, @first, class: 'form-control', placeholder: 'First name'.freeze %></td>
        <td><%= text_field_tag :m, @middle, class: 'form-control', placeholder: 'Middle name'.freeze %></td>
        <td><%= text_field_tag :l, @last, class: 'form-control', placeholder: 'Last name'.freeze %></td>
        <td><%= text_field_tag :d, @date, class: 'form-control', placeholder: 'Date of birth'.freeze %></td>
        <td><%= text_field_tag :g, @group, class: 'form-control', placeholder: 'Groups 1-52'.freeze, size: 12 %></td>
        <td><input class="btn btn-success" type="submit" value="Search" data-disable-with="Search"></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h3>Groups</h3>

<p>
  <% @groups.each do |group| %><span><a href="/offenses/group/<%= group %>"><%= group %></a></span> <% end %>
</p>

<h3>Offenses</h3>

<p>
  <%= page_entries_info @offenses %>
</p>

<div class="card">
    <table>
    <thead>
      <th></th>
      <th><%= sortable 'first_name'.freeze, 'First' %></th>
      <th><%= sortable 'middle_name'.freeze, 'Middle' %></th>
      <th><%= sortable 'last_name'.freeze, 'Last' %></th>
      <th><%= sortable 'date_of_birth'.freeze, 'Birthday' %></th>
      <th><%= sortable 'status'.freeze %></th>
      <th><%= sortable '"offenses"."group"'.freeze, 'Group'.freeze %></th>
    </thead>
    <tbody>
      <% @offenses.each do |offense| %>
        <tr>
          <td><%= link_to :link, offense %></td><td><%= offense.first_name %></td><td><%= offense.middle_name %></td><td><%= offense.last_name %></td><td><%= offense.dob_clean %></td><td><%= offense.status %></td><td><%= offense.group %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= paginate @offenses, param_name: :p %>
