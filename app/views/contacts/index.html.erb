<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= @queued.count %> Queued</h1>

      <%= link_to 'Download CSV', "/contacts.csv", class: 'btn btn-info', target: '_blank' %>
    </div>

    <div class="card">
      <table>
        <thead>
          <th>Queue date</th>
          <th>Full Name</th>
          <th>Advice preference</th>
          <th></th>
        </thead>
        <tbody>
          <% @queued.each do |contact| %>
            <tr>
              <td><%= contact.queue_date.strftime '%b %-d'.freeze %></td>
              <td><%= contact.full_name %></td>
              <td><%= contact.advice_method %></td>
              <td><%= link_to :view, contact, class: 'btn btn-info btn-sm'.freeze %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <h1 class="mt-4"><%= @unqueued.count %> Unqueued</h1>

    <div class="card">
      <table>
        <thead>
          <th>Info</th>
          <th>Relief preference</th>
          <th></th>
        </thead>
        <tbody>
          <% @unqueued.each do |contact| %>
            <tr>
              <td><%= contact.info %></td>
              <td><%= contact.relief_method %></td>
              <td><%= link_to :view, contact, class: 'btn btn-info btn-sm'.freeze %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
