<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h2>Edit contact</h2>

    <div class="card">
      <div class="card-header">
        <b><span class="card-subtitle text-muted">Names</span></b>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="row">
            <div class="col-4 col-sm-3">
              Name
            </div>
            <div class="col-8 col-sm-9">
              <%= @contact.full_name %>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto col-sm-3">
              Requestor
            </div>
            <div class="col-8 col-sm-9">
              <%= @contact.requestor_name %>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <%= form_for @contact do |f| %>
      <div class="form-group mt-4">
        <%= f.label :queue_date %>
        <%= f.date_field :queue_date, class: 'form-control', placeholder: 'Queue Date', pattern: '(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.](19|20)\d\d', title: 'MM/DD/YYYY', min: Date.new(2000, 1, 1), max: Date.today %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to 'Back', @contact, class: 'btn btn-info' %>
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
