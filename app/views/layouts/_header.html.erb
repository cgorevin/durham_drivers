<% root = root_path(locale: params[:locale]) %>

<header>
  <%= link_to 'Second Chance Driving', root, class: 'logo'.freeze %>

  <input type="checkbox" class="nav-toggle" id="nav-toggle"/>

  <nav>
    <ul style="list-style: none;">
      <li><%= link_to t('.search'), root, class: 'nav-link'.freeze %></li>

      <li>
        <% if I18n.locale == :es %>
          <a class="nav-link" href="/en">English</a>
        <% else %>
          <a class="nav-link" href="/es">Espa√±ol</a>
        <% end %>
      </li>

      <% if admin_signed_in? %>
        <li><%= link_to 'Admin', panel_path, class: 'nav-link'.freeze %></li>
        <li><%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: 'nav-link'.freeze %></li>
      <% end %>
    </ul>
  </nav>

  <label for="nav-toggle" class="nav-toggle-label">
    <span></span>
  </label>
</header>
